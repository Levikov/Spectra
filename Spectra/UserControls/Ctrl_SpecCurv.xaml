<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Spectra"
             xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
             xmlns:Custom="WFTools3D" x:Class="Spectra.Ctrl_SpecCurv"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Background="Black">
    <Grid Margin="0 0 30 0">
        <d3:ChartPlotter x:Name="chart1st" Margin="0" Opacity="1" Background="Black" Foreground="#FFFFFFFF" BorderBrush="White" FontSize="18">
            <d3:ChartPlotter.HorizontalAxis>
                <d3:HorizontalAxis x:Name="Xchart1st"/>
            </d3:ChartPlotter.HorizontalAxis>
            <d3:ChartPlotter.VerticalAxis>
                <d3:VerticalAxis x:Name="Ychart1st"  />
            </d3:ChartPlotter.VerticalAxis>
            <d3:Header FontFamily="Arial" Content="光谱曲线" FontSize="24" Margin="0,5"/>
            <d3:HorizontalAxisTitle Content="波长/nm" FontSize="24"/>
            <d3:VerticalAxisTitle Content="灰度值" FontSize="24"/>
        </d3:ChartPlotter>

    </Grid>
</UserControl>
