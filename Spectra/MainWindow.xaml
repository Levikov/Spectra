<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:System="clr-namespace:System;assembly=mscorlib" mc:Ignorable="d" x:Name="WindowMain" x:Class="Spectra.MainWindow"
        Title="光谱微纳卫星数据分析系统" Height="768" Width="1366" MinHeight="430" MinWidth="800"
        WindowStartupLocation="CenterScreen" MouseLeftButtonDown="WindowMain_MouseLeftButtonDown" Icon="image/ICON/14.ico" WindowState="Maximized">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Window.Background>
        <LinearGradientBrush EndPoint="1,1" StartPoint="1,0">
            <GradientStop Color="White" Offset="0.12"/>
            <GradientStop Color="#FF9FE0FF"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="image/Image_BackGround.jpg" Stretch="UniformToFill" Opacity="0.3"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Rectangle Stroke="{StaticResource WindowBorder}" StrokeThickness="1" Grid.RowSpan="1"/>
        <Rectangle Stroke="{StaticResource WindowBorder}" StrokeThickness="1" Grid.RowSpan="2"/>
        <Grid Margin="0" Grid.RowSpan="1">
            <StackPanel Height="33" Orientation="Horizontal" FlowDirection="RightToLeft" VerticalAlignment="Top">
                <Button x:Name="btnExit" Content="×" Template="{DynamicResource ButtonClose}" Click="btnExit_Click"/>
                <Button x:Name="btnMin" Content="—" Template="{DynamicResource ButtonMinMax}" Click="btnMin_Click"/>
            </StackPanel>
            <DockPanel Margin="0,40,0,0" MinHeight="50">
                <RadioButton x:Name="btnTopA" Content="数据管理" Template="{DynamicResource ButtonIcon1st}" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Margin="20,0,0,0" IsChecked="True">
                    <RadioButton.Background>
                        <ImageBrush ImageSource="image/ICON/1.ico" Stretch="Uniform"/>
                    </RadioButton.Background>
                </RadioButton>
                <RadioButton x:Name="btnTopB" Content="光谱分析" Template="{DynamicResource ButtonIcon1st}" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Margin="20,0,0,0">
                    <RadioButton.Background>
                        <ImageBrush ImageSource="image/ICON/2.ico" Stretch="Uniform"/>
                    </RadioButton.Background>
                </RadioButton>
                <RadioButton x:Name="btnTopC" Content="应用演示" Template="{DynamicResource ButtonIcon1st}" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Margin="20,0,0,0">
                    <RadioButton.Background>
                        <ImageBrush ImageSource="image/ICON/5.ico" Stretch="Uniform"/>
                    </RadioButton.Background>
                </RadioButton>
                <RadioButton x:Name="btnTopD" Content="系统管理" Template="{DynamicResource ButtonIcon1st}" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Margin="20,0,0,0">
                    <RadioButton.Background>
                        <ImageBrush ImageSource="image/ICON/3.ico" Stretch="Uniform"/>
                    </RadioButton.Background>
                </RadioButton>
                <Label x:Name="label" Template="{DynamicResource LabelIcon}"  Foreground="{StaticResource WindowBorder}" VerticalContentAlignment="Center" HorizontalAlignment="Right">
                    <Label.Background>
                        <ImageBrush ImageSource="image/ICON/14.ico" Stretch="Uniform"/>
                    </Label.Background>
                </Label>
            </DockPanel>
        </Grid>
        <Grid x:Name="gridTopA" Margin="1" Grid.Row="2">
            <!--触发Grid的显示与隐藏-->
            <Grid.Resources>
                <Style TargetType="{x:Type Grid}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsChecked, ElementName=btnTopA}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" MaxWidth="240" MinWidth="150"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <GridSplitter x:Name="splitA" Grid.RowSpan="1" Margin="0,50" Width="1" Background="{StaticResource ButtonBack}"/>
            <StackPanel>
                <RadioButton x:Name="btnLeftA1" Content="数据处理" Template="{DynamicResource ButtonIcon2nd}" Margin="0,50,0,0" Height="70" VerticalAlignment="Top" IsChecked="True">
                    <RadioButton.Background>
                        <ImageBrush ImageSource="image/ICON/1.ico"/>
                    </RadioButton.Background>
                </RadioButton>
                <RadioButton x:Name="btnLeftA2" Content="数据存储" Template="{DynamicResource ButtonIcon2nd}" Margin="0,0,0,0" Height="70" VerticalAlignment="Top">
                    <RadioButton.Background>
                        <ImageBrush ImageSource="image/ICON/2.ico"/>
                    </RadioButton.Background>
                </RadioButton>
                <RadioButton x:Name="btnLeftA3" Content="文件检索" Template="{DynamicResource ButtonIcon2nd}" Margin="0,0,0,0" Height="70" VerticalAlignment="Top">
                    <RadioButton.Background>
                        <ImageBrush ImageSource="image/ICON/5.ico"/>
                    </RadioButton.Background>
                </RadioButton>
                <RadioButton x:Name="btnLeftA4" Content="数据传输" Template="{DynamicResource ButtonIcon2nd}" Margin="0,0,0,0" Height="70" VerticalAlignment="Top">
                    <RadioButton.Background>
                        <ImageBrush ImageSource="image/ICON/4.ico"/>
                    </RadioButton.Background>
                </RadioButton>
            </StackPanel>
            <Grid x:Name="gridLeftA1" Grid.Column="2">
                <!--触发Grid的显示与隐藏-->
                <Grid.Resources>
                    <Style TargetType="{x:Type Grid}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=btnLeftA1}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="280"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="23*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <GroupBox x:Name="gb_Import" Grid.Column="1" Margin="0,40,0,0" Header="数据导入" FontSize="20">
                    <StackPanel Margin="0">
                        <Grid Height="100">
                            <Label Content="文件路径:" Margin="30,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left"></Label>
                            <TextBox Name="tb_Path" TextWrapping="Wrap" Margin="140,0,200,0" IsReadOnly="True"/>
                            <Button x:Name="btnOpenFile" Margin="0,32,30,32" Content="打开" Template="{DynamicResource ButtonDefault}" Click="btnOpenFile_Click" Width="160" HorizontalAlignment="Right"/>
                        </Grid>
                        <ProgressBar x:Name="prog_Import" Height="36" Margin="30,0" BorderBrush="{StaticResource ButtonBack}"/>
                        <DockPanel Margin="10,0" LastChildFill="False" Height="60" HorizontalAlignment="Center">
                            <Button x:Name="btnUnpFile" Template="{DynamicResource ButtonDefault}" VerticalAlignment="Center" Margin="0" HorizontalAlignment="Center" Content="解包"  Click="btnUnpFile_Click" Width="160" IsEnabled="False"/>
                            <Button x:Name="btnDecFile" Template="{DynamicResource ButtonDefault}" VerticalAlignment="Center" Margin="100,0,0,0" HorizontalAlignment="Center" Content="解压图像"  Click="btnDecFile_Click" Width="160" IsEnabled="False"/>
                            <Button x:Name="b_Abort_Import" Template="{DynamicResource ButtonDefault}" VerticalAlignment="Center" Margin="100,0,0,0" HorizontalAlignment="Left" Content="放弃" Click="b_Abort_Import_Click" Width="160" IsEnabled="False"/>
                        </DockPanel>
                    </StackPanel>
                </GroupBox>
                <GroupBox Grid.Row="1" Grid.Column="1" Margin="0,10,0,50" Header="控制台" FontSize="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <GridSplitter Grid.Column="0" Margin="0,5" Width="1" Background="{StaticResource ButtonBack}"/>
                        <TextBox x:Name="tb_Console" Grid.Column="0" TextWrapping="Wrap" IsReadOnly="True" Margin="10,5" ScrollViewer.CanContentScroll="True" VerticalScrollBarVisibility="Auto" Height="Auto" HorizontalContentAlignment="Left" VerticalContentAlignment="Top"/>
                        <DataGrid x:Name="dataGrid_Errors" Grid.Column="1" Margin="5" LoadingRow="LoadingRowHeader" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header ="错误位置(B)" Binding="{Binding 错误位置}" MinWidth="200" Width="1*"/>
                                <DataGridTextColumn Header ="错误类型" Binding="{Binding 错误类型}" MinWidth="200" Width="1*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </GroupBox>
            </Grid>
            <Grid x:Name="gridLeftA2" Grid.Column="2">
                <!--触发Grid的显示与隐藏-->
                <Grid.Resources>
                    <Style TargetType="{x:Type Grid}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=btnLeftA2}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="300"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="340" MaxWidth="340"/>
                </Grid.ColumnDefinitions>
                <GroupBox Grid.Row="1" Grid.Column="1" Header="存储图像" FontSize="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="1" Grid.Column="0" Content="文件存储路径:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtSaveFilesPath" Grid.Row="1" Grid.Column="1" IsReadOnly="True"/>
                        <Button x:Name="btnSaveFilesPath" Grid.Row="1" Grid.Column="2" Content="选择存储路径" Template="{DynamicResource ButtonDefault}" Width="160" Click="btnSaveFilesPath_Click" />
                        <ProgressBar Grid.Row="2" Grid.Column="1" Height="36" BorderBrush="{StaticResource ButtonBack}"/>
                        <Button x:Name="btnSaveFiles" Grid.Row="2" Grid.Column="2" Content="开始存储" Template="{DynamicResource ButtonDefault}" Width="160" Click="btnSaveFiles_Click" />
                    </Grid>
                </GroupBox>
            </Grid>
            <Grid x:Name="gridLeftA3" Grid.Column="2">
                <!--触发Grid的显示与隐藏-->
                <Grid.Resources>
                    <Style TargetType="{x:Type Grid}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=btnLeftA3}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="140"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="340" MaxWidth="340"/>
                </Grid.ColumnDefinitions>
                <GroupBox Grid.Row="1" Grid.Column="1" Margin="0,0,20,0" Header="文件状态" FontSize="20">
                    <DataGrid x:Name="dataGrid_decFile" Margin="5" LoadingRow="LoadingRowHeader">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="帧数" Binding="{Binding 帧数}" Width="auto"/>
                            <DataGridTextColumn Header="起始时间" Binding="{Binding 起始时间}" Width="auto"/>
                            <DataGridTextColumn Header="结束时间" Binding="{Binding 结束时间}" Width="auto"/>
                            <DataGridTextColumn Header="起始经纬" Binding="{Binding 起始经纬}" Width="auto"/>
                            <DataGridTextColumn Header="结束经纬" Binding="{Binding 结束经纬}" Width="auto"/>
                            <DataGridTextColumn Header="解包时间" Binding="{Binding 解包时间}" Width="auto"/>
                            <DataGridTextColumn Header="解包后文件路径" Binding="{Binding 解包后文件路径}" Width="auto"/>
                            <DataGridTextColumn Header="解压时间" Binding="{Binding 解压时间}" Width="auto"/>
                            <DataGridTextColumn Header="解压后文件路径" Binding="{Binding 解压后文件路径}" Width="auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
                <GroupBox Grid.Row="2" Grid.Column="1" Margin="0,10,20,0" Header="文件列表" FontSize="20">
                    <DataGrid x:Name="dataGrid_srcFile" Margin="5" LoadingRow="LoadingRowHeader" SelectionChanged="dataGrid_srcFile_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header ="文件名" Binding="{Binding 文件名}" Width="auto"/>
                            <DataGridTextColumn Header ="文件路径" Binding="{Binding 文件路径}" Width="auto"/>
                            <DataGridTextColumn Header ="是否已解包" Binding="{Binding 是否已解包}" Width="auto"/>
                            <DataGridTextColumn Header ="是否已解压" Binding="{Binding 是否已解压}" Width="auto"/>
                            <DataGridTextColumn Header ="文件大小(B)" Binding="{Binding 文件大小}" Width="auto"/>
                            <DataGridTextColumn Header ="MD5" Binding="{Binding MD5}" Width="auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
                <Grid Grid.Column="2" Grid.Row="1" Grid.RowSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="140"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <!--<TextBox x:Name="textBlock" Grid.Row="1" Grid.Column="2" Margin="10,0" FontSize="22" Height="34" TextWrapping="Wrap" Text="{Binding ElementName=calendarFile,Path=SelectedDate}" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Calendar x:Name="calendarFile" Grid.Row="1" Grid.Column="2" Margin="10,10,10,0" Height="320" Width="320" VerticalAlignment="Top" SelectionMode="MultipleRange"
                        Style="{DynamicResource CalendarStyle1}" 
                        CalendarItemStyle="{DynamicResource CalendarItemStyle1}" 
                        CalendarDayButtonStyle="{DynamicResource CalendarDayButtonStyle1}" 
                        CalendarButtonStyle="{DynamicResource CalendarButtonStyle1}" Grid.RowSpan="2">
                    </Calendar>-->
                    <GroupBox Grid.Row="0" Header="文件选择" FontSize="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="当前选定:" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBox x:Name="txtCurrentFile" Grid.Column="1" Margin="10,0" VerticalAlignment="Center"/>
                            <Button Grid.Row="1" Grid.ColumnSpan="2" x:Name="btnSelectFile" Content="选定文件" Template="{DynamicResource ButtonDefault}" Width="160" Click="btnSelectFile_Click"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Grid.Row="1" Header="文件检索" FontSize="20" Margin="0,10,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="文件全称:" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="textSelectFile" Margin="10,0" Height="34" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" TextChanged="textSelectFile_TextChanged"/>

                            <StackPanel Margin="0" Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button x:Name="btnGetAllRecord" Content="查找所有" Template="{DynamicResource ButtonDefault}" Width="120" Click="btnGetAllRecord_Click"/>
                                <Button x:Name="btnDelRecord" Content="删除记录" Template="{DynamicResource ButtonDefault}" Width="120" Click="btnDelRecord_Click" Margin="40,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </Grid>
            </Grid>
        </Grid>
        <Grid x:Name="gridTopB" Margin="1" Grid.Row="2">
            <!--触发Grid的显示与隐藏-->
            <Grid.Resources>
                <Style TargetType="{x:Type Grid}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsChecked, ElementName=btnTopB}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" MaxWidth="240" MinWidth="150"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <GridSplitter x:Name="splitB" Grid.RowSpan="1" Margin="0,50" Width="1" Background="{StaticResource ButtonBack}"/>
            <StackPanel>
                <RadioButton x:Name="btnLeftB1" Content="数据检索" Template="{DynamicResource ButtonIcon2nd}" Margin="0,50,0,0" Height="70" VerticalAlignment="Top">
                    <RadioButton.Background>
                        <ImageBrush ImageSource="image/ICON/1.ico"/>
                    </RadioButton.Background>
                </RadioButton>
                <RadioButton x:Name="btnLeftB2" Content="光谱显示" Template="{DynamicResource ButtonIcon2nd}" Margin="0" Height="70" VerticalAlignment="Top" IsChecked="True">
                    <RadioButton.Background>
                        <ImageBrush ImageSource="image/ICON/2.ico"/>
                    </RadioButton.Background>
                </RadioButton>
                <RadioButton x:Name="btnLeftB4" Content="谷歌地图" Template="{DynamicResource ButtonIcon2nd}" Margin="0" Height="70" VerticalAlignment="Top">
                    <RadioButton.Background>
                        <ImageBrush ImageSource="image/ICON/4.ico"/>
                    </RadioButton.Background>
                </RadioButton>
            </StackPanel>
            <Grid x:Name="gridLeftB1" Grid.Column="2">
                <!--触发Grid的显示与隐藏-->
                <Grid.Resources>
                    <Style TargetType="{x:Type Grid}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=btnLeftB1}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="160"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <GroupBox Grid.Row="0" Grid.Column="1" Margin="0,40,0,5" FontSize="20">
                    <GroupBox.Header>
                        <CheckBox x:Name="cb_byTime" VerticalContentAlignment="Center" Margin="0" HorizontalContentAlignment="Center" Content="按时间搜索"/>
                    </GroupBox.Header>
                    <Grid IsEnabled="{Binding ElementName=cb_byTime,Path=IsChecked}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Content="起始时刻:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <TextBox Grid.Row="0" Grid.Column="2" x:Name="dtp_Start" Height="34" TextWrapping="Wrap" Text="{Binding SelectedDate, ElementName=calStart}" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" GotFocus="DateGotFocus" TextChanged="dtp_TextChanged"/>
                        <Label Grid.Row="1" Grid.Column="0" Content="终止时刻:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <TextBox Grid.Row="1" Grid.Column="2" x:Name="dtp_End" Height="34" TextWrapping="Wrap" Text="{Binding SelectedDate, ElementName=calEnd}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" GotFocus="DateGotFocus" TextChanged="dtp_TextChanged"/>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Row="0" Grid.Column="3" Grid.RowSpan="2" Margin="5,40,5,5" FontSize="20">
                    <GroupBox.Header>
                        <CheckBox x:Name="cb_byCoord" VerticalContentAlignment="Center" Margin="0" HorizontalContentAlignment="Center" Content="按坐标搜索"/>
                    </GroupBox.Header>
                    <Grid IsEnabled="{Binding ElementName=cb_byCoord,Path=IsChecked}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Content="左上经度:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <TextBox Grid.Row="0" Grid.Column="2" x:Name="LT_Lon" Margin="5" Height="34" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" GotFocus="DateGotFocus" TextChanged="Coord_TextChanged"/>
                        <Label Grid.Row="1" Grid.Column="0" Content="左上纬度:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <TextBox Grid.Row="1" Grid.Column="2" x:Name="LT_Lat" Margin="5" Height="34" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" GotFocus="DateGotFocus" TextChanged="Coord_TextChanged"/>
                        <Label Grid.Row="2" Grid.Column="0" Content="右下经度:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <TextBox Grid.Row="2" Grid.Column="2" x:Name="RB_Lon" Margin="5" Height="34" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" GotFocus="DateGotFocus" TextChanged="Coord_TextChanged"/>
                        <Label Grid.Row="3" Grid.Column="0" Content="右下纬度:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <TextBox Grid.Row="3" Grid.Column="2" x:Name="RB_Lat" Margin="5" Height="34" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" GotFocus="DateGotFocus" TextChanged="Coord_TextChanged"/>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Row="1" Grid.Column="1" Margin="0,5,0,5" FontSize="20">
                    <GroupBox.Header>
                        <CheckBox x:Name="cb_byFrmCnt" VerticalContentAlignment="Center" Margin="0" HorizontalContentAlignment="Center" Content="按帧号检索(测试)"/>
                    </GroupBox.Header>
                    <Grid IsEnabled="{Binding ElementName=cb_byFrmCnt,Path=IsChecked}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="起始帧号:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <TextBox Grid.Column="2" x:Name="tb_start_frm" Margin="5,0" Height="34" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" GotFocus="DateGotFocus" TextChanged="tb_frm_TextChanged"/>
                        <Label Grid.Column="3" Content="—" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0"></Label>
                        <TextBox Grid.Column="4" x:Name="tb_end_frm" Margin="5,0" Height="34" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" GotFocus="DateGotFocus" TextChanged="tb_frm_TextChanged"/>
                    </Grid>
                </GroupBox>
                <Grid Grid.Row="0" Grid.Column="4" Grid.RowSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <ProgressBar x:Name="progMakeImage" Height="34" BorderBrush="{StaticResource ButtonBack}"/>
                    <Button x:Name="b_Query" Grid.Row="1" Content="图像检索" Width="160" Template="{DynamicResource ButtonDefault}" Margin="0" VerticalAlignment="Center" Click="b_Query_Click"/>
                    <Button x:Name="button_Clear_Result" Grid.Row="2" Content="清空结果" Width="160" Template="{DynamicResource ButtonDefault}" Margin="0" VerticalAlignment="Center" Click="button_Clear_Result_Click"/>
                    <Button x:Name="btnMakeImage" Grid.Row="3" Content="生成图像" Width="160" Template="{DynamicResource ButtonDefault}" Margin="0" VerticalAlignment="Center" IsEnabled="False" Click="btnMakeImage_Click"/>
                    <Button x:Name="btnDisplay" Grid.Row="4" Content="显示结果" Width="160" Template="{DynamicResource ButtonDefault}" Margin="0" VerticalAlignment="Center" IsEnabled="False" Click="btnDisplay_Click"/>
                </Grid>
                <GroupBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" Margin="0,0,0,50" Header="检索结果" FontSize="20">
                    <DataGrid x:Name="dataGrid_Result" Margin="5"  LoadingRow="LoadingRowHeader">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header ="帧号" Binding="{Binding FrameId}" Width="200"/>
