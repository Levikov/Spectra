<Window x:Class="Spectra.SpecImgWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spectra"
        mc:Ignorable="d"
        Title="SpecImgWindow" Height="300" Width="300" Background="Black" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <local:Ctrl_ImageView x:Name="ImageView_A" Margin="0"/>
        <local:Ctrl_ImageView x:Name="ImageView_B" Margin="0" Grid.Column="1"/>
        <local:Ctrl_ImageView x:Name="ImageView_C" Margin="0" Grid.Row="1"/>
        <local:Ctrl_ImageView x:Name="ImageView_D" Grid.Column="1" Margin="0" Grid.Row="1"/>
    </Grid>
</Window>
