<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spectra"
        xmlns:Spectra="clr-namespace:Spectra" x:Class="Spectra.MultiFuncWindow"
        mc:Ignorable="d"
        Title="MultiFuncWindow" Height="900" Width="1600" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Grid x:Name="MainGrid" Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="SubGrid_1">

        </Grid>
        <Grid x:Name="SubGrid_2" Grid.Column="1">

        </Grid>
        <Grid x:Name="SubGrid_3" Grid.Row="1"/>
        <Grid x:Name="SubGrid_4" Grid.Row="1" Grid.Column="1"/>
    </Grid>
</Window>
