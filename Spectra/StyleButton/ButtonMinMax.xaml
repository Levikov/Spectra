<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Spectra.StyleButton">
    <ControlTemplate x:Key="ButtonMinMax" TargetType="Button">
        <Label x:Name="label" Foreground="{StaticResource MinFontFore}" Background="{StaticResource MinBack}" FlowDirection="LeftToRight" FontSize="20" Width="24" ToolTip="最小化">
            <!--通过Label重写Button-->
            <ContentPresenter HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center"/>
            <!--设置文本的位置-->
        </Label>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" TargetName="label" Value="{StaticResource MinMove}"/>
                <Setter Property="Foreground" TargetName="label" Value="{StaticResource MinFontMove}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
</ResourceDictionary>